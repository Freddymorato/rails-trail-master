


<h4>Trails by <%= @user.name %>:</h4><br><br>

<% @user.trails.order("created_at asc").each do |trail| %>
  <div class='trail-card'>
    <div class="row row-flex">
      <div class="col-md-4 col-sm-6 col-xs-12-A">
        <%= image_tag trail.image.url, class:'img-fluid' %><br><br>
        <small class='user-link'>User: <%= link_to trail.user.name, user_path(trail.user) %></small>
      </div>

      <div class="box-div">
      </div>

      <div class="col-md-4 col-sm-6 col-xs-12-B">
        <h6><%= link_to trail.name, user_trail_path(current_user, trail), class:'name' %></h6><br><br>
        <%= flag_icon(trail.country.flag) %><br><br>
        <p class="card-1">Difficulty:&nbsp;&nbsp;&nbsp;<%= trail.difficulty %> / 5</p><br><br>
        <% if current_user.trails.include?(trail) %>
          <%= link_to "Edit Trail", edit_user_trail_path(current_user, trail), class: "edit-link" %>&nbsp;&nbsp;&nbsp;
          <%= link_to "Delete Trail", user_trail_path(current_user, trail), :confirm => "Are you sure?", :method => :delete, class: "delete-link"%>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
